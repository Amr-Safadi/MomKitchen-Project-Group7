<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="contactUsAnchorPane" prefWidth="600.0" prefHeight="600.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Controllers.ContactUsController"
            style="-fx-background-image: url('/Images/NEWBACKGRND.jpg'); -fx-background-size: cover;">

    <!-- Title -->
    <Label layoutX="220.0" layoutY="40.0" text="Contact Us" textFill="#2d5512">
        <font>
            <Font name="Bauhaus 93" size="26.0"/>
        </font>
    </Label>

    <!-- Name Label & Field -->
    <Label layoutX="50.0" layoutY="100.0" text="Your Name:"/>
    <TextField fx:id="nameField" layoutX="150.0" layoutY="95.0" prefWidth="300.0"/>

    <!-- Branch Label & Dropdown -->
    <Label layoutX="50.0" layoutY="150.0" text="Select Branch:"/>
    <ComboBox fx:id="branchComboBox" layoutX="150.0" layoutY="145.0" prefWidth="300.0"/>

    <!-- Complaint Label & TextArea -->
    <Label layoutX="50.0" layoutY="200.0" text="Your Complaint:"/>
    <TextArea fx:id="complaintField" layoutX="150.0" layoutY="195.0" prefWidth="300.0" prefHeight="150.0"/>

    <!-- Submit Button -->
    <Button fx:id="submitBtn" layoutX="250.0" layoutY="370.0" text="Submit" onAction="#handleSubmit"
            style="-fx-background-color: #8ad4a8; -fx-text-fill: white;">
        <font>
            <Font name="Bauhaus 93" size="18.0"/>
        </font>
    </Button>

    <!-- Back Button -->
    <Button fx:id="backBtn" layoutX="20.0" layoutY="20.0" text="Back" onAction="#handleBack"
            style="-fx-background-color: #8ad4a8; -fx-text-fill: white;">
        <font>
            <Font name="Bauhaus 93" size="16.0"/>
        </font>
    </Button>

</AnchorPane>
