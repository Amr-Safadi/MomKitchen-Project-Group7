<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="reservationPane" prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Controllers.ReservationController">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Reservation" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <GridPane layoutX="50.0" layoutY="80.0" hgap="10" vgap="10">
            <children>
                <Label text="Branch:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="branchLabel" text=""/>

                <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="timeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Guests:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="guestsField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Seating:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <children>
                        <RadioButton fx:id="indoorRadio" text="Indoor"/>
                        <RadioButton fx:id="outdoorRadio" text="Outdoor"/>
                    </children>
                </HBox>

                <Label text="Full Name:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="fullNameField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Label text="Credit Card:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextField fx:id="creditCardField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox layoutX="50.0" layoutY="500.0" spacing="20">
            <children>
                <Button text="Back" onAction="#handleBack"/>
                <Button text="Reserve" onAction="#handleReserve"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
