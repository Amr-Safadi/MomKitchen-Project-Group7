<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true"
            style="-fx-background-image: url('/Images/NEWBACKGRND.jpg'); -fx-background-size: cover; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Controllers.ReportsController">

    <content>
        <AnchorPane fx:id="rootPane" prefHeight="900.0" prefWidth="800.0" style="-fx-background-color: transparent;">

            <!-- Title -->
            <Label layoutX="20" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Monthly Reports" />

            <!-- Delivery Orders Table -->
            <TableView fx:id="ordersTable" layoutX="20" layoutY="70" prefHeight="150.0" prefWidth="750.0">
                <columns>
                    <TableColumn fx:id="orderIdColumn" text="Order ID" />
                    <TableColumn fx:id="orderDateColumn" text="Date" />
                    <TableColumn fx:id="orderTotalPriceColumn" text="Total Price" />
                </columns>
            </TableView>

            <!-- Table Reservations Per Day -->
            <TableView fx:id="reservationsTable" layoutX="20" layoutY="250" prefHeight="150.0" prefWidth="750.0">
                <columns>
                    <TableColumn fx:id="reservationDateColumn" text="Date" />
                    <TableColumn fx:id="reservationCountColumn" text="Reservations Count" />
                </columns>
            </TableView>

            <!-- Complaints Histogram -->
            <BarChart fx:id="complaintsChart" layoutX="20" layoutY="450" prefHeight="300.0" prefWidth="750.0">
                <xAxis>
                    <CategoryAxis fx:id="xAxis" label="Days" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" label="Complaints" />
                </yAxis>
            </BarChart>

            <!-- Buttons -->
            <HBox layoutX="20" layoutY="780" spacing="15">
                <Button fx:id="exportCsvButton"
                        onAction="#handleExportCsv"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Export to CSV" />
                <Button fx:id="backButton"
                        onAction="#handleBackToMain"
                        style="-fx-background-color: #FF5733; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Back to Main" />
            </HBox>

        </AnchorPane>
    </content>

</ScrollPane>
