    <children>
        <Label layoutX="44.0" layoutY="191.0" prefHeight="36.0" prefWidth="450.0" text="Enter your email and phone number to validate:" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="17.0" />
         </font></Label>
        <Label layoutX="48.0" layoutY="260.0" prefHeight="17.0" prefWidth="71.0" text="Email:" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="20.0" />
         </font></Label>
        <TextField fx:id="emailField" layoutX="124.0" layoutY="259.0" />
        <Label layoutX="48.0" layoutY="299.0" prefHeight="17.0" prefWidth="79.0" text="Phone:" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="20.0" />
         </font></Label>
        <TextField fx:id="phoneField" layoutX="124.0" layoutY="298.0" />
        <Button fx:id="validateBtn" layoutX="44.0" layoutY="361.0" onAction="#validateUser" style="-fx-background-color: #8ad4a8; -fx-background-radius: 10;" text="Validate" textFill="WHITE">
