<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Controllers.AddMealController">

    <children>
        <Label layoutX="50" layoutY="30" text="Add a New Meal" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Meal Name -->
        <Label layoutX="50" layoutY="70" text="Meal Name:"/>
        <TextField fx:id="mealNameField" layoutX="180" layoutY="70" prefWidth="300"/>

        <!-- Price -->
        <Label layoutX="50" layoutY="110" text="Price ($):"/>
        <TextField fx:id="mealPriceField" layoutX="180" layoutY="110" prefWidth="300"/>

        <!-- Ingredients -->
        <Label layoutX="50" layoutY="150" text="Ingredients:"/>
        <TextArea fx:id="mealIngredientsField" layoutX="180" layoutY="150" prefWidth="300" prefHeight="60"/>

        <!-- Meal Category (Dropdown) -->
        <Label layoutX="50" layoutY="230" text="Category:"/>
        <ComboBox fx:id="mealCategoryComboBox" layoutX="180" layoutY="230" prefWidth="300"/>

        <!-- Branch Meal Checkbox -->
        <CheckBox fx:id="isBranchMealCheckBox" layoutX="50" layoutY="270" text="Branch Meal"/>

        <!-- Preferences (Up to 8) -->
        <Label layoutX="50" layoutY="310" text="Meal Preferences:"/>
        <VBox layoutX="180" layoutY="310">
            <TextField fx:id="preference1" promptText="Preference 1" prefWidth="280"/>
            <TextField fx:id="preference2" promptText="Preference 2" prefWidth="280"/>
            <TextField fx:id="preference3" promptText="Preference 3" prefWidth="280"/>
            <TextField fx:id="preference4" promptText="Preference 4" prefWidth="280"/>
            <TextField fx:id="preference5" promptText="Preference 5" prefWidth="280"/>
            <TextField fx:id="preference6" promptText="Preference 6" prefWidth="280"/>
            <TextField fx:id="preference7" promptText="Preference 7" prefWidth="280"/>
            <TextField fx:id="preference8" promptText="Preference 8" prefWidth="280"/>
        </VBox>

        <!-- Buttons -->
        <Button fx:id="submitMealBtn" layoutX="180" layoutY="550" text="Add Meal" onAction="#handleAddMeal"/>
        <Button fx:id="backBtn" layoutX="50" layoutY="550" text="Back" onAction="#handleBack"/>
    </children>
</AnchorPane>
