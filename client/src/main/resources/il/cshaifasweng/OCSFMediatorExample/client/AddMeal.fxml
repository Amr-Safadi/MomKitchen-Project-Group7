<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Controllers.AddMealController">

    <children>
        <Label layoutX="50" layoutY="30" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add a New Meal" />

        <!-- Meal Name -->
        <Label layoutX="50" layoutY="70" text="Meal Name:" />
        <TextField fx:id="mealNameField" layoutX="180" layoutY="70" prefWidth="300" />

        <!-- Price -->
        <Label layoutX="50" layoutY="110" text="Price ($):" />
        <TextField fx:id="mealPriceField" layoutX="180" layoutY="110" prefWidth="300" />

        <!-- Ingredients -->
        <Label layoutX="50" layoutY="150" text="Ingredients:" />
        <TextArea fx:id="mealIngredientsField" layoutX="180" layoutY="150" prefHeight="60" prefWidth="300" />

        <!-- Meal Category (Dropdown) -->
        <Label layoutX="50" layoutY="230" text="Category:" />
        <ComboBox fx:id="mealCategoryComboBox" layoutX="180" layoutY="230" prefWidth="300" />

        <!-- Branch Meal Checkbox -->
        <CheckBox fx:id="isBranchMealCheckBox" layoutX="50" layoutY="270" text="Branch Meal" />

        <!-- Preferences (Up to 8) -->
        <Label layoutX="50" layoutY="310" text="Meal Preferences:" />
        <VBox layoutX="180" layoutY="310">
            <TextField fx:id="preference1" prefWidth="280" promptText="Preference 1" />
            <TextField fx:id="preference2" prefWidth="280" promptText="Preference 2" />
            <TextField fx:id="preference3" prefWidth="280" promptText="Preference 3" />
            <TextField fx:id="preference4" prefWidth="280" promptText="Preference 4" />
            <TextField fx:id="preference5" prefWidth="280" promptText="Preference 5" />
            <TextField fx:id="preference6" prefWidth="280" promptText="Preference 6" />
            <TextField fx:id="preference7" prefWidth="280" promptText="Preference 7" />
            <TextField fx:id="preference8" prefWidth="280" promptText="Preference 8" />
        </VBox>

        <!-- Buttons -->
        <Button fx:id="submitMealBtn" layoutX="180" layoutY="550" onAction="#handleAddMeal" text="Add Meal" />
        <Button fx:id="backBtn" layoutX="50" layoutY="550" onAction="#handleBack" text="Back" />
      <Button fx:id="imageBtn" layoutX="294.0" layoutY="550.0" mnemonicParsing="false" onAction="#handleSelectImage" text="Add Image" />
      <Label fx:id="imageName" layoutX="446.0" layoutY="554.0" text="Chosen Image : " />
    </children>
</AnchorPane>
