<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CartController"
      spacing="10" alignment="CENTER"
      prefHeight="600.0" prefWidth="600.0">

   <ListView fx:id="cartView" prefHeight="400.0" maxWidth="400.0" />

   <HBox spacing="10" alignment="CENTER">
      <Button fx:id="backBtn" text="Back" onAction="#backHandler"/>
      <Button fx:id="removeBtn" text="Remove Selected" onAction="#removeHandler"/>
   </HBox>
</VBox>
